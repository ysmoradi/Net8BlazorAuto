@* I've added another page to test navigating between 2 pages that are auto render mode *@

<h1>Counter 2</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        Console.Out.WriteLineAsync(currentCount.ToString()); // Whether you see the value of currentCount in the browser console or the aspnetcore console determines where this code is being executed.
        currentCount+=2;
    }
}
